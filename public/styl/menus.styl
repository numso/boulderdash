.menus
  color: $text
  text-align: center

  .title
    background-color: $yellow
    font-size: 35px
    width: 600px
    margin: 10px auto
    padding: 20px 10px

  .credits-menu
    display: none

  .help-menu
    display: none

  .menu
    background-color: $blue
    width: 600px
    margin: 0 auto
    padding: 10px

    .title
      padding: 0
      margin: 0
      margin-bottom: 20px

    .menu-item
      display: inline-block
      background-color: $yellow
      width: 200px
      border-radius: 5px
      padding: 20px 10px
      margin: 10px
      box-shadow: 0 0 20px 2px rgba(0,0,0,.5)

      &:hover
        cursor: pointer
        background-color: $darkyellow
        color: $lightblue

    .credits-box
      font-size: 30px
      height: 50px

      .by
        float: left
        padding-left: 70px

      .creator
        float: right
        padding-right: 70px

    .control-set
      display: inline-block
      padding: 0 20px

      .subtitle
        font-size: 24px

      table
        text-align: left
        font-size: 18px
        padding: 30px 0

        tr
          td
            padding: 5px 20px